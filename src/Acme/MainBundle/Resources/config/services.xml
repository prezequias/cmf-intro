<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="acme_main.page.class">Acme\MainBundle\Document\Page</parameter>
        <parameter key="acme_main.page_admin.class">Acme\MainBundle\Admin\PageAdmin</parameter>
    </parameters>

    <services>
        <service id="acme.main.phpcr.initializer"
                 class="Doctrine\Bundle\PHPCRBundle\Initializer\GenericInitializer">

            <argument type="collection">
                <argument>/cms/content/pages</argument>
            </argument>

            <tag name="doctrine_phpcr.initializer"/>
        </service>

        <service id="acme_main.page_admin" class="%acme_main.page_admin.class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.cmf" label_catalogue="AcmeMainBundle" label="dashboard.label_page" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%acme_main.page.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setRootPath">
                <argument>%cmf_content.persistence.phpcr.content_basepath%/pages</argument>
            </call>
        </service>
    </services>

</container>
